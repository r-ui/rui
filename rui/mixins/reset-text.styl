// 重置字体

reset_text()
    font-family $font-family-base
    font-style normal
    font-weight normal
    letter-spacing normal
    line-break auto
    line-height $line-height-base
    text-align left 
    text-align start
    text-decoration none
    text-shadow none
    text-transform none
    white-space normal
    word-break normal
    word-spacing normal
    word-wrap normal