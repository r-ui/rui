// Stacked Icons
// -------------------------

.{$icon-css-prefix}-stack
    position relative
    display inline-block
    width 2em
    height 2em
    line-height 2em
    vertical-align middle

.{$icon-css-prefix}-stack-1x, .{$icon-css-prefix}-stack-2x
    position absolute
    left 0
    width 100%
    text-align center

.{$icon-css-prefix}-stack-1x
    line-height inherit
.{$icon-css-prefix}-stack-2x
    font-size 2em
.{$icon-css-prefix}-inverse
    color @icon-inverse
